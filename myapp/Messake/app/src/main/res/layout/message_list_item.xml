<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background"
    android:paddingBottom="6.0dip"
    android:paddingTop="6.0dip"
    tools:context=".activity.MainActivity" >

    <com.messake.messake.view.CircularImage
        android:id="@+id/user_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/channel_qq" />

    <TextView
        android:id="@+id/friends_name"
        android:layout_width="wrap_content"
        android:layout_height="25.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="18.0dip"
        android:layout_toRightOf="@id/user_photo"
        android:drawableRight="@drawable/terminal_icon_ios"
        android:ellipsize="end"
        android:gravity="left|center"
        android:includeFontPadding="false"
        android:padding="0.0dip"
        android:singleLine="true"
        android:text="离落风清"
        android:textSize="16.0sp" />

    <TextView
        android:id="@+id/message_date"
        android:layout_width="wrap_content"
        android:layout_height="25.0dip"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="18.0dip"
        android:ellipsize="end"
        android:gravity="left|center"
        android:includeFontPadding="false"
        android:padding="0.0dip"
        android:singleLine="true"
        android:text="18:10"
        android:textSize="10.0sp" />

    <TextView
        android:id="@+id/friends_message"
        android:layout_width="fill_parent"
        android:layout_height="25.0dip"
        android:layout_alignParentRight="true"
        android:layout_below="@id/friends_name"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="18.0dip"
        android:layout_toRightOf="@id/user_photo"
        android:ellipsize="end"
        android:gravity="left|center"
        android:includeFontPadding="false"
        android:padding="0.0dip"
        android:singleLine="true"
        android:text="好好学习"
        android:textColor="@color/gray"
        android:textSize="12.0sp" />

    <TextView
        android:id="@+id/unread_message_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/message_date"
        android:layout_below="@+id/message_date"
        android:background="@drawable/new_tips_bg"
        android:gravity="center"
        android:padding="0dp"
        android:text="9+"
        android:textColor="#ffffff"
        android:textScaleX="1.5"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</RelativeLayout>